<div class="row">
  <div class="col-6 d-flex flex-column align-items-center my-5 mx-3">
    <div class="">
      <h2>Log in</h2>
      <p>Welcome back ! Pleace enter your details</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs" style="width: 450px;">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text-center my-4" style="background-color: #2290eb91;border-radius: 5px;">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="col-6" style="background-color: #addaff;">

  </div>
</div>
